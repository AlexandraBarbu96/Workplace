@model Workplace_v2._2.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "registerForm", @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    <div>
        <p>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </p>
    </div>
    @Html.AntiForgeryToken()
    <br/>
    <div class="grid" id="content-grid">
        <dl>
            <dd>
                @Html.ActionLink("❮ Back to Home", "Index", "Home", new { }, new { @class = "site-button" })
                <a href="javascript:document.getElementById('registerForm').submit()" class="site-button">Your Skills ❯</a>
            </dd>
            <dd class="form-group">
                <div class="row col-sm-12">
                    <div class="col-sm-4">
                        <i class="glyphicon glyphicon-user"></i>
                        @Html.Label("FirstName", "First Name", new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-sm-4">
                        @Html.Label("LastName", "Last Name", new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-sm-4">
                        @Html.Label("UserName", "Username", new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row col-sm-12">
                    <div class="col-sm-4">
                        <i class="glyphicon glyphicon-envelope"></i>
                        @Html.Label("Email", "Email", new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-sm-4">
                        <i class="glyphicon glyphicon-phone"></i>
                        @Html.Label("PhoneNumber", "Phone Number", new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row col-sm-12">
                    <div class="col-sm-4">
                        <i class="glyphicon glyphicon-lock"></i>
                        @Html.Label("Password", "Password", new { @class = "control-label", @style = "margin-top:2.5rem" })
                        @Html.PasswordFor(m => m.Password, new { @id = "myPassword", @class = "form-control", @style = "display:inline" })
                        <div class="pretty p-icon p-toggle p-plain" style="margin-left:3px;">
                            <input type="checkbox" onclick="myFunction()" />
                            <div class="state p-success-o p-on">
                                <i class="glyphicon glyphicon-eye-open checked"></i>
                            </div>
                            <div class="state p-off">
                                <i class="glyphicon glyphicon-eye-close unchecked"></i>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row col-sm-12">
                    <div class="col-sm-4">
                        @Html.Label("ConfirmPassword", "Confirm Password", new { @class = "control-label", @style = "margin-top:2.5rem" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @id = "myConfirmed", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
            </dd>
        </dl>
    </div>
}

@section Scripts{
    <script>
        function myFunction() {
            var x = document.getElementById("myPassword");
            var y = document.getElementById("myConfirmed");
            if (x.type === "password") {
                x.type = "text"; y.type = "text";
            } else {
                x.type = "password"; y.type = "password";
            }
        }
    </script>
}
@section Style{
    <style>
        #content-grid {
            margin: 2vw;
            grid-template-columns: 1fr;
        }

        .site-button {
            background-color: #f5f5f5;
            color: #838383;
        }

            .site-button:hover {
                background-color: #f5f5f5;
                color: #0b91d4;
            }

        #content-grid > dl > dd:first-child > a:nth-child(2) {
            float: right;
        }
        .row{
            margin:5px;
        }
        .isDisabled {
            color: currentColor;
            cursor: not-allowed;
            opacity: 0.5;
            text-decoration: none;
        }
    </style>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/pretty-checkbox@3.0/dist/pretty-checkbox.min.css">
}
