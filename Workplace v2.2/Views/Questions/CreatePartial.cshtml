@model Workplace_v2._2.Models.Question
@using (Html.BeginForm("Create","Questions",FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.HiddenFor(m => m.JobId)
        @Html.HiddenFor(m => m.CreatorId)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="row col-md-12">
                <div>
                    @Html.TextAreaFor(model => model.Text, new { @class = "form-control", @rows = "6", @cols = "80" })
                    @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row col-md-12">
                <div class="col-md-offset-6 col-md-12">
                    <input type="submit" value="Add" class="site-button" id="save-button"/>
                </div>
            </div>
        </div>
    </div>
}
<style>
    .site-button{
        padding:5px;
    }
</style>
